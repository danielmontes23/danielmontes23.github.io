        <script>
            function updateTime() {
                const now = new Date();
                const hours = now.getHours();
                const minutes = now.getMinutes();
                const seconds = now.getSeconds();
                const amOrPM = hours >= 12 ? 'PM' : 'AM';

                document.querySelector('.hours').textContent = String(hours % 12 || 12).padStart(2, '0');
                document.querySelector('.minutes').textContent = String(minutes).padStart(2, '0');
                document.querySelector('.seconds').textContent = String(seconds).padStart(2, '0');
                document.querySelector('.amOrPM').textContent = amOrPM;

                const daysOfWeek = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
                const months = [
                    'January', 'February', 'March', 'April', 'May', 'June',
                    'July', 'August', 'September', 'October', 'November', 'December'
                ];

                document.querySelector('.dayOfWeek').textContent = daysOfWeek[now.getDay()];
                document.querySelector('.month').textContent = months[now.getMonth()];
                document.querySelector('.dayOfMonth').textContent = String(now.getDate()).padStart(2, '0');
                document.querySelector('.year').textContent = String(now.getFullYear());
            }

            setInterval(updateTime, 1000);
            updateTime();
        </script>
